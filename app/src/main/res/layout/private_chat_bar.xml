<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    app:popupTheme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    app:titleTextColor="?android:attr/textColorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/private_chat_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:cropToPadding="true"
        android:src="@drawable/default_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/private_chat_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_username"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/private_chat_last_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_user_status"
            android:textSize="15sp"
            android:textStyle="normal" />
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>